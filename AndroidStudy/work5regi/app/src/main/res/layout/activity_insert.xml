<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".insertActivity">

    <TextView
            android:text="이름"
            android:layout_width="103dp"
            android:layout_height="57dp" android:id="@+id/textName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.114"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"/>
    <TextView
            android:text="나이"
            android:layout_width="103dp"
            android:layout_height="57dp" android:id="@+id/textAge"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.071"
            app:layout_constraintTop_toBottomOf="@+id/textName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.13"/>
    <TextView
            android:text="주소"
            android:layout_width="103dp"
            android:layout_height="57dp" android:id="@+id/textAddress"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.232"
            app:layout_constraintTop_toBottomOf="@+id/textName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.13"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/insertName"
            app:layout_constraintStart_toEndOf="@+id/textName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.531" app:layout_constraintVertical_bias="0.112"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/insertAddress"
            app:layout_constraintStart_toEndOf="@+id/textName" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.529" app:layout_constraintVertical_bias="0.372"/>
    <EditText
            android:layout_width="315dp"
            android:layout_height="65dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/insertAge"
            app:layout_constraintStart_toEndOf="@+id/textAge" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.529" app:layout_constraintVertical_bias="0.065"
            app:layout_constraintTop_toBottomOf="@+id/insertName"/>
    <Button
            android:text="추가"
            android:layout_width="229dp"
            android:layout_height="99dp" android:id="@+id/insert"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintVertical_bias="0.583"/>
</androidx.constraintlayout.widget.ConstraintLayout>