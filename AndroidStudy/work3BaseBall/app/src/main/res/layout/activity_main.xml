<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Spinner
            android:layout_width="110dp"
            android:layout_height="79dp" android:id="@+id/spinner1"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/spinner2"
            app:layout_constraintHorizontal_bias="0.54" app:layout_constraintVertical_bias="0.224"/>
    <Spinner
            android:layout_width="110dp"
            android:layout_height="79dp" android:id="@+id/spinner2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.224"/>
    <Spinner
            android:layout_width="110dp"
            android:layout_height="79dp" android:id="@+id/spinner3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503" app:layout_constraintStart_toEndOf="@+id/spinner2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.224"/>
    <TextView
            android:text="TextView"
            android:layout_width="257dp"
            android:layout_height="82dp" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="PLAY"
            android:layout_width="242dp"
            android:layout_height="59dp" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.721"/>
    <Button
            android:text="REPLAY"
            android:layout_width="242dp"
            android:layout_height="59dp" android:id="@+id/button3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.826"/>
    <TextView
            android:text="TextView"
            android:layout_width="99dp"
            android:layout_height="74dp" android:id="@+id/spcheck1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" android:layout_marginStart="84dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="99dp"
            android:layout_height="74dp" android:id="@+id/spcheck2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" android:layout_marginStart="256dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="99dp"
            android:layout_height="74dp" android:id="@+id/spcheck3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" android:layout_marginStart="448dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>