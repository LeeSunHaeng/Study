<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="삭제"
            android:layout_width="226dp"
            android:layout_height="73dp" android:id="@+id/delBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/insertBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.304"
    />
    <Button
            android:text="전부보기"
            android:layout_width="226dp"
            android:layout_height="73dp" android:id="@+id/selectBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/insertBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.653"
            app:layout_constraintHorizontal_bias="0.508"/>
    <EditText
            android:layout_width="531dp"
            android:layout_height="83dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editInsert"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.051"
            app:layout_constraintHorizontal_bias="0.507"/>
    <Button
            android:text="추가"
            android:layout_width="232dp"
            android:layout_height="78dp" android:id="@+id/insertBtn"
            app:layout_constraintTop_toBottomOf="@+id/editInsert" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.059"/>
    <EditText
            android:layout_width="316dp"
            android:layout_height="52dp"
            android:inputType="textPersonName"
            android:text="삭제할  문자열을 입력해주세요."
            android:ems="10"
            android:id="@+id/editDelText"
            app:layout_constraintTop_toBottomOf="@+id/insertBtn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.135"/>
    <TextView
            android:text="SELECT"
            android:layout_width="530dp"
            android:layout_height="64dp" android:id="@+id/selectionText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.64"/>
</androidx.constraintlayout.widget.ConstraintLayout>