<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="0"
            android:layout_width="313dp"
            android:layout_height="62dp" android:id="@+id/countView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.206"/>
    <Button
            android:text="+"
            android:layout_width="146dp"
            android:layout_height="89dp" android:id="@+id/Pbtn"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.184" app:layout_constraintTop_toBottomOf="@+id/countView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.06"/>
    <Button
            android:text="-"
            android:layout_width="146dp"
            android:layout_height="89dp" android:id="@+id/Mbtn"
            android:onClick="onClick"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.815" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countView"
            app:layout_constraintVertical_bias="0.06"/>
    <Button
            android:text="reset"
            android:layout_width="241dp"
            android:layout_height="75dp" android:id="@+id/resetBtn"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/countView"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.257"/>
    <EditText
            android:layout_width="271dp"
            android:layout_height="52dp"
            android:inputType="number"
            android:text="Number"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.243" app:layout_constraintTop_toBottomOf="@+id/countView"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Set"
            android:layout_width="86dp"
            android:layout_height="65dp" android:id="@+id/setBtn"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.95" app:layout_constraintTop_toBottomOf="@+id/countView"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.503"/>
</androidx.constraintlayout.widget.ConstraintLayout>