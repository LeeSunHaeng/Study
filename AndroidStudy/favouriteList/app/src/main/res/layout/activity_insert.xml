<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".insertActivity" tools:layout_editor_absoluteY="735dp" tools:layout_editor_absoluteX="0dp">

    <Button
            android:text="CAMERA"
            android:layout_width="159dp"
            android:layout_height="57dp" android:id="@+id/cameraBtn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.199" app:layout_constraintVertical_bias="0.816"/>
    <Button
            android:text="SAVE"
            android:layout_width="159dp"
            android:layout_height="57dp" android:id="@+id/saveBtn"
            app:layout_constraintStart_toEndOf="@+id/cameraBtn" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.644" app:layout_constraintVertical_bias="0.816"/>
    <ImageView
            android:layout_width="311dp"
            android:layout_height="312dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/avatars"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.141" app:layout_constraintHorizontal_bias="0.501"/>
    <TextView
            android:text="0.0"
            android:layout_width="124dp"
            android:layout_height="46dp" android:id="@+id/imgView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.886"
            app:layout_constraintVertical_bias="0.504"/>
    <TextView
            android:text="0.0"
            android:layout_width="124dp"
            android:layout_height="46dp" android:id="@+id/lonView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.569"
            app:layout_constraintVertical_bias="0.504"/>
    <TextView
            android:text="0.0"
            android:layout_width="124dp"
            android:layout_height="46dp" android:id="@+id/latView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.184"
            app:layout_constraintVertical_bias="0.504"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:text="평가"
            android:ems="10"
            android:id="@+id/contentEditText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.606"/>
</androidx.constraintlayout.widget.ConstraintLayout>