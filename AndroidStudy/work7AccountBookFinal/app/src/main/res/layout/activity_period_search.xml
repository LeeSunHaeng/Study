<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PeriodSearchActivity">
    <DatePicker
            android:id="@+id/StartDatePicker"
            android:layout_width="290dp"
            android:layout_height="139dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.116"
            app:layout_constraintHorizontal_bias="0.012"/>
    <DatePicker
            android:id="@+id/EndDatePicker"
            android:layout_width="290dp"
            android:layout_height="139dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.116"
            app:layout_constraintHorizontal_bias="0.961"/>
    <TextView
            android:text="시작 날짜"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_width="174dp"
            android:layout_height="45dp" android:id="@+id/textView2"
            app:layout_constraintBottom_toTopOf="@+id/StartDatePicker"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.143"
            app:layout_constraintVertical_bias="0.58"/>
    <TextView
            android:text="종료 날짜"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_width="174dp"
            android:layout_height="45dp" android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/EndDatePicker"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.83"
            app:layout_constraintVertical_bias="0.58"/>
    <Button
            android:text="검색"
            android:layout_width="202dp"
            android:layout_height="56dp" android:id="@+id/periodBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.919"
            app:layout_constraintHorizontal_bias="0.153"/>
    <Button
            android:text="메인"
            android:layout_width="202dp"
            android:layout_height="56dp" android:id="@+id/periodMainBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.919"
            app:layout_constraintHorizontal_bias="0.819"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="603dp"
            android:layout_height="410dp"
            android:id="@+id/periodRecyclerView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintVertical_bias="0.687"/>
</androidx.constraintlayout.widget.ConstraintLayout>

