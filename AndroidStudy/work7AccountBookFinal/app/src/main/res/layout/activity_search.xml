<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".searchActivity">

    <Button
            android:text="메인"
            android:layout_width="201dp"
            android:layout_height="47dp" android:id="@+id/searchMaintBtn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/searchDatePicker" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.157"/>
    <Button
            android:text="검색"
            android:layout_width="201dp"
            android:layout_height="47dp" android:id="@+id/searchStartBtn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/searchDatePicker" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.092"/>
    <DatePicker
            android:id="@+id/searchDatePicker"
            android:layout_width="365dp"
            android:layout_height="165dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.071"
            app:layout_constraintHorizontal_bias="0.004"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="598dp"
            android:layout_height="626dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/recyclerView"
            app:layout_constraintTop_toBottomOf="@+id/searchStartBtn" app:layout_constraintVertical_bias="0.953"/>

</androidx.constraintlayout.widget.ConstraintLayout>