<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tv_print"/>

    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="빼기"
            android:id="@+id/bt_minus"
            app:layout_constraintStart_toEndOf="@+id/et_number" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/bt_plus" app:layout_constraintTop_toBottomOf="@+id/tv_print"
            android:layout_marginTop="44dp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_number" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/bt_minus"
            app:layout_constraintTop_toBottomOf="@+id/tv_print" android:layout_marginTop="44dp"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="더하기"
            android:layout_marginEnd="24dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/bt_plus"
            app:layout_constraintStart_toEndOf="@+id/bt_minus" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/tv_print" android:layout_marginTop="44dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>